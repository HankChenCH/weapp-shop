@import "../tpls/base.wxss";

.my-container{
    background-color:#EDEDED;
    height: 100vh;
}
.my-header{
    background-color: #292929;
    color: #fff;
    display: flex;
    align-items: center;
    padding: 30rpx;
    font-size: 28rpx;
}
.my-header image{
    height: 100rpx;
    width: 100rpx;
    border-radius: 100rpx;
}
.my-header text{
    margin-left: 20rpx;
}
.my-address{
    background-color: #fff;
}

.section{
    border-bottom:1rpx solid #E9E9E9;
    margin-left:30rpx;
    height: 90rpx;
}
.section:last-child{
    border-bottom:none;
}
.section input{
    font-size: 28rpx;
    color:#7C7C7C;
    padding: 20rpx 30rpx 20rpx 0;
}
.section picker{
    height: 100%;
    flex: 1;
}
.section picker view{
    width: 100%;
    height: 90rpx;
    font-size: 28rpx;
    color:#7C7C7C;
    display: flex;
    align-items: center;
}
.section picker view .key{
    color: #333;
}
.section picker view .val{
    margin-left: 20rpx;
}
.section .arrow-icon{
    flex-basis: 40rpx;
    background-color: #AB956D;
    display: flex;
    align-items: center;
    justify-content: center;
}
.section .arrow-icon image{
    height: 32rpx;
    width: 32rpx;
}

.my-order{
    margin-top: 20px;
    border-bottom: 1rpx solid #EDEDED;
}

.about-us{
  margin-top: 30px;
}

.item-title{
    padding: 25rpx 0;
    color: #999999;
    text-align: center;
    border-bottom: 1rpx solid #EDEDED;
    font-size: 28rpx;
    background-color: #fff;
    position: relative;
}
.item-title image{
    position: absolute;
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    right: 10rpx;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.locat-item{
  font-size: 28rpx;
  width: 25%;
  text-align: center;
  color: #7C7C7C;
}
.locat-item > view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.locat-item image{
  margin: 20rpx auto 10rpx;
  width: 80rpx;
  height: 80rpx;
}
.locat-item text{
  line-height: 50rpx;
}
.locat-item > view .count{
  font-size: 24rpx;
  background-color: #292929;
  color: white;
  position: absolute;
  right: 50rpx;
  top: 10rpx;
  height: 36rpx;
  width: 36rpx;
  line-height: 36rpx;
  border-radius: 36rpx;
  text-align: center;
  overflow: visible;  
}