@import "../tpls/category/category-tpl.wxss";

.category-container{
    /*min-height: 100vh;*/
    background-color: #fff;
    height: 100%;
}
.category-box{
    display: flex;
    min-height: 100vh;  
    /* overflow: hidden; */
}
.left-box{
    /* flex: 0 0 150rpx; */
    border-right:2rpx solid #D8D8D8;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}
.menu-item{
    height: 50rpx;
    padding: 20rpx 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:28rpx;
}

.selected{
    color: #292929;
    border-left:5px solid #292929;
}

.right-box{
    flex: 1;
    transition: all 500ms ease-in-out;
    padding-left: 150rpx;
}
.tanslate0{
    transform:translate(0,0);
}
.tanslate1{
    transform:translate(0,-100vh);
}
.tanslate2{
    transform:translate(0,-200vh);
}
.tanslate3{
    transform:translate(0,-300vh);
}
.tanslate4{
    transform:translate(0,-400vh);
}
.tanslate5{
    transform:translate(0,-500vh);
}
.foods-type-box{
    height: 100%;
}
